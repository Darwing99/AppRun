<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRun.Estadisticas"
             Title="Tus Estadisticas"
             xmlns:model="clr-namespace:AppRun.ViewModel"
             >

    <ContentPage.BindingContext>
        <model:ModelEstadisticas/>
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="10">
                <Image  HeightRequest="150" Source="fondo.png">
                    
                </Image>
            </StackLayout>
            
            <ScrollView>

                <StackLayout Margin="10">

                    <ListView RefreshControlColor="OrangeRed" IsPullToRefreshEnabled="True"  IsRefreshing="{Binding Refresc}"    
                              RowHeight="100"  x:Name="listaCorredores" ItemsSource="{Binding Corredores}"  >
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame HeightRequest="50" CornerRadius="2">
                                        <StackLayout  Margin="0" Orientation="Vertical">
                                           

                                            <StackLayout HorizontalOptions="EndAndExpand" Orientation="Horizontal">
                                                <Label FontAttributes="Bold" Text="{Binding carrera}"></Label>
                                                <Label FontAttributes="Bold" Text="{Binding fecha}"></Label>
                                            </StackLayout>
                                            <StackLayout HorizontalOptions="EndAndExpand" Orientation="Horizontal">
                                                <Label FontAttributes="Bold" Text="{Binding distancia }"></Label>
                                                <Label FontAttributes="Bold" Text="{Binding tiempo}"></Label>
                                            </StackLayout>


                                        </StackLayout>

                                    </Frame>

                                </ViewCell>


                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>