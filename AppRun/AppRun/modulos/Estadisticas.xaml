<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppRun.Estadisticas"
             Title="Tus Estadisticas"
             >
    <ContentPage.Content>
        <StackLayout>
            <StackLayout Padding="10">
                <Image  HeightRequest="150" Source="fondo.png">
                    
                </Image>
            </StackLayout>
            <StackLayout  VerticalOptions="Center" Orientation="Horizontal"  Padding="20,0,20,0">
                <Label FontSize="20" Text="Desde"></Label>
                <DatePicker VerticalOptions="Center" Visual="Material" BackgroundColor="White"  FontSize="20"  >
                    
                </DatePicker>
                <Label FontSize="20" Text="Hasta">
                    
                </Label>
                <DatePicker  TextTransform="Lowercase" VerticalOptions="StartAndExpand" Visual="Material" FontSize="20">

                </DatePicker>


            </StackLayout>
            <ScrollView>
                <StackLayout HorizontalOptions="FillAndExpand">
                    <StackLayout  Padding="20,0,20,0"  HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                        <!--Calorias quemadas-->
                        <StackLayout HorizontalOptions="FillAndExpand">
                            <Frame HeightRequest="80" CornerRadius="5" HasShadow="True">
                               
                                <StackLayout Orientation="Vertical">
                                    <Label FontSize="20" Text="Calorias"></Label>
                                    <Label Text="12,200"></Label>
                                    
                                </StackLayout>
                                
                            </Frame>
                        </StackLayout >
                        <StackLayout HorizontalOptions="FillAndExpand">
                            <Frame HeightRequest="80" CornerRadius="5" HasShadow="True">

                                <StackLayout Orientation="Vertical">
                                    <Label FontSize="20" Text="Velocidad"></Label>
                                    <Label Text="12km/h"></Label>
                                    <IndicatorView>
                                        
                                    </IndicatorView>
                                </StackLayout>

                            </Frame>
                        </StackLayout>

                    </StackLayout>
                    <StackLayout  Padding="20,0,20,0" HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                        <!--Distancias-->
                        <StackLayout HorizontalOptions="FillAndExpand">
                            <Frame HeightRequest="80" CornerRadius="5" HasShadow="True">

                                <StackLayout Orientation="Vertical">
                                    <Label FontSize="20" Text="Distancia Total"></Label>
                                    <Label Text="12,200 km"></Label>

                                </StackLayout>

                            </Frame>
                        </StackLayout >
                        <StackLayout HorizontalOptions="FillAndExpand">
                            <Frame HeightRequest="80" CornerRadius="5" HasShadow="True">

                                <StackLayout Orientation="Vertical">
                                    <Label FontSize="20" Text="Carreras Totales"></Label>
                                    <Label Text="12"></Label>
                                    <IndicatorView>

                                    </IndicatorView>
                                </StackLayout>

                            </Frame>
                        </StackLayout>

                    </StackLayout>
                    <StackLayout  Padding="20,0,20,20" HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                        <!--tiempos-->
                        <StackLayout HorizontalOptions="FillAndExpand">
                            <Frame HeightRequest="80" CornerRadius="5" HasShadow="True">

                                <StackLayout Orientation="Vertical">
                                    <Label FontSize="20" Text="Tiempo Total"></Label>
                                    <Label Text="12.5 horas"></Label>

                                </StackLayout>

                            </Frame>
                        </StackLayout >
                        <StackLayout HorizontalOptions="FillAndExpand">
                            <Frame HeightRequest="80" CornerRadius="5" HasShadow="True">

                                <StackLayout Orientation="Vertical">
                                    <Label FontSize="20" Text="Carreras Totales"></Label>
                                    <Label Text="12"></Label>
                                    <IndicatorView>

                                    </IndicatorView>
                                </StackLayout>

                            </Frame>
                        </StackLayout>

                    </StackLayout>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>